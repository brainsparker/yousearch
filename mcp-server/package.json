{
  "name": "yousearch-mcp",
  "version": "1.0.0",
  "description": "MCP server for You.com search with rich UI",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "tsc -p tsconfig.server.json",
    "build:ui": "vite build",
    "dev": "tsx watch main.ts",
    "dev:http": "tsx watch http-server.ts",
    "start": "node dist/main.js",
    "start:http": "node dist/http-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/ext-apps": "^0.0.6",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
